<h1>Services</h1>

{{#if services.length}}
{{#each services}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image">
                <img src="{{img}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action">
                <a href="/services/{{id}}" target="_blank">More information...</a>
                <a href="/services/{{id}}/edit?allow=true">Edit service</a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>No services available</p>
{{/if}}