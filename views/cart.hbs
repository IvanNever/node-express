<h1>Cart</h1>

<div id="cart">
    {{#if services.length}}
        <table>
            <thead>
                <th>Name</th>
                <th>Amount</th>
                <th>Action</th>
            </thead>
            <tbody>
                {{#each services}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Total price:</strong> <span class="price">{{price}}</span></p>

        <form action="/orders" method="POST">
        <button type="submit" class="btn">Checkout</button></form>
    {{else}}
        <p>The cart is empty</p>
    {{/if}}
</div>