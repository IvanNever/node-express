<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        <img class="avatar" src="https://avatars3.githubusercontent.com/u/47678317?s=460&u=cb15e2abd308fa5a63ae0e46272911576db3cbe3&v=4" alt="avatar">
        <p>No avatar</p>
    </div>
    <div class="col s6">
        <form action="/profile" method="POST">
            <p>Your email: {{user.email}}</p>

            <div class="input-field">
                <input id="name" type="text" name="name" class="validate" required value="{{user.name}}">
                <label for="title">User name</label>
                <span class="helper-text" data-error="Enter your name"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Add new avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">Change</button>
        </form>
    </div>
</div>